[% PROCESS strings.tmpl -%]
.right html {
	padding:            0px;
	margin:             0px;
}
.right body {
	padding:            0px;
	margin:             0px;
}
.right body > #frames > tr > td {
	width: 200px;
	max-width: 200px;
	overflow: hidden;
}
.right body > #frames > tr > td + td {
	width: auto;
}
#title {
	position:           fixed;
	background-color:   white;
	width:              100%;
}
#title h1 {
	float:              left;
	padding-top:        0px;
	padding-bottom:     0px;
	margin-top:         0px;
	margin-bottom:      0px;
}
#title ul {
	display:            inline;
}
#title li {
	display:            inline;
}
#title hr {
	margin:             5px 0px 1px 0px;
}
#title pre {
	 display:           none;
}
#title table {
	width:              100%;
	vertical-align:     middle;
	text-align:         center;
	clear:              both;
}
#title table th {
	text-align:         left;
	padding-left:       5px;
	font-stretch:       wider;
}
#title table td {
	text-align:         right;
	padding-right:      5px;
}
.right #content {
	 padding:           9px;
}
.right #api pre {
	padding:            3px;
	border-radius:      5px;
	font-family:        sans-serif;
	font-size:          8pt;
	-moz-border-radius: 5px;
}
.right #api table {
	border:             1px outset;
	width:              500px;
	overflow:           visible;
	border-collapse:    collapse;
}
.right #api th, .right #api td {
	border:             1px inset;
	font-size:          10pt;
	padding:            2px;
}
.right #api td {
	width:              [% UNLESS ApiColumns %][% ApiColumns = 2 %][% END %][% 1 / (1 + ApiColumns) * 100  %]%;
}
.right #api th {
	text-align:         right;
	width:              160px;
}
.right #api td.double_list {
	padding:            0px;
}
.right #api td.double_list > table {
	border-width:       0px;
	margin:             0px;
	width:              100%;
}
.right #api td.double_list > table td {
	border-width:       0px 1px 0px 0px;
	padding:            2px;
	margin:             0px;
	width:              50%;
}
.right #api ul {
	margin:             0px;
	padding:            5px;
	list-style-type:    none;
}
.right #api div ul ul {
	margin-left:        10px;
}
.hierarchy {
	float:              right;
	border:             1px solid black;
	border-radius:      3px;
	-moz-border-radius: 3px;
}
.right #api .hierarchy > div {
	border:             1px solid black;
	border-left:        0px;
	border-right:       0px;
	border-top:         0px;
	font-weight:        bold;
	font-size:          1.2em;
	font-family:        sans-serif;
	padding:            1px 5px 1px 5px;
	text-align:         center;
	border-radius:      3px;
	-moz-border-radius: 3px 3px 0px 0px;
}
.right #api #note {
	clear:              both;
	font-size:          0.8em;
}
.right #api #note #details {
	clear:              both;
	display:            none;
}
.right #api #note:hover #details {
	display:            block;
}

.right #code a.line_no {
	background-color:   blue;
	color:              black;
	width:              4em;
	text-align:         right;
	display:            block;
	float:              left;
}
.right #code .reserved {
	color:              red;
}
.right #code .pod {
	color:              #A23;
}
.right #code .comment {
	color:              #A41;
}
.right #code .builtin {
	color:              #36E;
}
.right #code .other {
	color:              #E33;
}
.right #code .operator {
	color:              #4A4;
}
.right #code .logic {
	color:              #92D;
}
.right #code .declatory {
	color:              #F66;
}
.right #code pre {
	padding:            0px;
}
