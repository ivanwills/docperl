pre {
	background-color:   #EEE;
	border:             solid 1px black;
	padding:            2px;
}
body {
	font-family:        sans-serif;
}
h1, h2, h3, h4, h5, h6 {
	background-color:   #ADA;
	font-family:        serif;
	-moz-border-radius: 5px;
}
h1 a, h2 a, h3 a, h4 a, h5 a, h6 a {
	text-decoration:    none;
	color:              black;
}
h1 a div.up {
	display:            none;
}
h1 a.code,
h2 a.code,
h3 a.code,
h4 a.code {
	display:            none;
}
h1 {
	padding-left:       4px;
}
h2 {
	padding:            5px 2px 5px 8px;
	background-color:   #BBC5BB;
}
h3 {
	padding-left:       12px;
	background-color:   #B6E6B6;
}
h4 {
	padding-left:       16px;
	background-color:   #CCEECC;
}
hr {
}

dl dl {
	margin-left:        2em;
}

td {
	padding-left:       2px;
	padding-right:      2px;
}
ul.menu, ul.menu ul {
	list-style-type:    none;
}
ul.menu li, ul.menu ul li {
	list-style-type:    none;
}
li.level1 a,
li.level2 a,
li.level3 a,
li.level4 a {
	color:              blue;
	font-size:          1.2em;
}
li.level1 {
	padding-left:       0em;
	font-size:          1.1em;
}
li.level2 {
	padding-left:       3em;
	font-size:          1.0em;
}
li.level3 {
	padding-left:       6em;
	font-size:          0.9em;
}
li.level4 {
	padding-left:       9em;
	font-size:          0.8em;
}

body #headding {
	width: 220px;
	overflow: hidden;
}
#frames {
	width: 100%;
}
#frames,
#frames tr,
#frames tr td {
	padding: 0px;
	margin: 0px;
	border: 0px solid red;
	border-collapse: collapse;
}
#frames tr td {
	vertical-align: top;
	border-right: 3px ridge grey;
	width: 220px;
}
#frames tr td.right {
	border-right: 0px solid grey;
	width: auto;
}
iframe {
	border: 0px solid white;
	height: 20000px;
	width: 100%;
}

body#list_page {
	font-size:          8pt;
	padding:            0px;
	margin:             0px;
}
#list_page h1, #list_page h2, #list_page h3 {
	margin-top:         0px;
	padding:            5px 2px 4px 2px;
	font-family:        sans-serif;
}
#list_page h1 {
	font-size:          1.4em;
	text-align:         center;
	-moz-border-radius: 0px;
}
#list_page h2 {
	font-size:          1.2em;
	-moz-border-radius: 0px;
}
#list_page table {
	font-size:          0.9em;
}
#list_page ul {
	font-size:          1em;
	list-style-type:    none;
	padding-left:       0px;
	margin-left:        0px;
}
#list_page li {
	clear:              left;
}
#list_page ul li {
	padding-left:       0.3em;
}
#list_page ul ul {
	padding-left:       0.3em;
	margin-left:        0.3em;
}
#list_page li > ul {
	display:            none;
}
#list_page .plus {
	padding-left:       2px;
	padding-right:      2px;
	border-style:       solid;
	border-width:       1px;
}
#list_page .mod_expand {
	width:              1em;
	margin-right:       0.8em;
	text-align:         center;
	vertical-align:     middle;
	display:            block;
	float:              left;
	border-style:       solid;
	border-width:       1px;
	clear:              left;
	-moz-border-radius: 4px;
	border-radius:      4px;
	text-decoration:    none;
}
#list_page .mod_expand {
	-moz-border-radius: 3px;
	border-radius:      3px;
}
#list_page .info {
	width:              10px;
	-moz-border-radius: 10px;
	border-width:       0px;
	float:              right;
	text-align:         center;
	margin-right:       4px;
	margin-top:         -3px;
}
#list_page .info span {
	display:            none;
	float:              right;
	border:             1px solid black;
	background-color:   white;
	position:           relative;
	left:               1px;
	top:                1px;
	margin-right:       -4px;
}
#list_page .info:hover span {
	display:            block;
}
#list_page #adv_open,
#list_page #adv_close {
	border:             solid black 1px;
	padding:            2px;
	font-weight:        bold;
	font-size:          1.4em;
	cursor:             pointer;
}
#list_page #adv_open {
}
#list_page #adv_close {
	display:           none;
}
#list_page #advanced {
	display:           none;
}
#list_page #advanced label,
#list_page #advanced select {
	font-size:         1.2em;
}
